{
  "arrowParens": "always",
  "semi": false,
  "tabWidth": 2,
  "printWidth": 80,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": [
    "^next/(.*)$",
    "^react$",
    "^react-dom/(.*)$",
    "^react/(.*)$",
    "^@radix-ui/(.*)$",
    "^@tanstack/(.*)$",
    "^@hookform/(.*)$",
    "^zod$",
    "^date-fns$",
    "^react-hook-form$",
    "^zustand$",
    "<THIRD_PARTY_MODULES>",
    "^@/assets/(.*)",
    "^@/stores/(.*)$",
    "^@/lib/(.*)$",
    "^@/utils/(.*)$",
    "^@/constants/(.*)$",
    "^@/context/(.*)$",
    "^@/hooks/(.*)$",
    "^@/components/ui/(.*)$",
    "^@/components/(.*)$",
    "^@/features/(.*)$",
    "^[./]"
  ]
}
